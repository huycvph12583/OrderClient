<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Chỉnh Sửa Loại Thực Đơn"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_white_corner_16_topleft_topright"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Spinner
                android:id="@+id/sp_loaithucdon_dialog_suaxoa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Loại Thực Đơn"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/custom_radius"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edt_loaithucdon_dialog_suaxoa_tenloaitd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:hint="Nhập tên loại thực đơn mới"
                android:background="@drawable/bg_white_corner_10_border_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_loaithucdon_dialog_suaxoa_huy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_corner_10"
                    android:text="Hủy"
                    android:alpha="0.4"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:backgroundTint="@color/nen" />

                <Button
                    android:id="@+id/btn_loaithucdon_dialog_suaxoa_xoa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue_corner_10"
                    android:text="Xóa"
                    android:textSize="14sp"
                    app:backgroundTint="@color/blue" />

                <Button
                    android:id="@+id/btn_loaithucdon_dialog_suaxoa_luu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:background="@drawable/bg_blue_corner_10"
                    android:text="Lưu"/>

            </LinearLayout>


        </LinearLayout>
</LinearLayout>